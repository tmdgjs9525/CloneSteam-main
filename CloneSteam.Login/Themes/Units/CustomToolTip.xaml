<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:CloneSteam.Login.UI.Units">
    <Style TargetType="{x:Type units:CustomToolTip}">
        <Setter Property="Background" Value="#696773" />
        <Setter Property="Width" Value="285"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:CustomToolTip}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="2">
                        <Label FontWeight="Bold" Content="{Binding RememberLoginTooltip}" Foreground="#e0e1e6"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>