<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:CloneSteam.Core.Converters;assembly=CloneSteam.Core"
    xmlns:units="clr-namespace:CloneSteam.Library.UI.Units.Side">

    <Style TargetType="{x:Type units:GroupComboBoxItem}">
        <Setter Property="Foreground" Value="#cae4fb" />

        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="#3d4450" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:GroupComboBoxItem}">
                    <Border Background="{TemplateBinding Background}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox />
                            <TextBlock Margin="10,0,0,0" Text="{Binding .}" />
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>